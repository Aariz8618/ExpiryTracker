<!-- Clock hands that will rotate -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <!-- Hour hand (shorter, thicker) -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M11.5,12 L11.5,8 L12.5,8 L12.5,12 Z"
        android:strokeWidth="0.5"
        android:strokeColor="#FFFFFF"
        android:strokeLineCap="round"/>

    <!-- Minute hand (longer, thinner) -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M11.7,12 L11.7,6 L12.3,6 L12.3,12 Z"
        android:strokeWidth="0.3"
        android:strokeColor="#FFFFFF"
        android:strokeLineCap="round"/>

    <!-- Center circle -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M12,11 A1,1 0 1,1 12,13 A1,1 0 1,1 12,11z"/>
</vector>