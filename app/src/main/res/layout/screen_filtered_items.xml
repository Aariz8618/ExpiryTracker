<?xml version="1.0" encoding="utf-8"?>
<!-- screen_filtered_items.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_section_filtered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/gray_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_back_filtered"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/left_arrow"
                app:iconTint="@color/green_primary"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:id="@+id/tv_filtered_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtered Items"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/green_primary"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section_filtered">

        <!-- Items List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_filtered_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_grocery" />

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/loading_indicator_filtered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="#F5F5F5">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorColor="@color/green_primary"
                app:trackColor="@color/gray_200" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading items..."
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state_filtered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_cart"
                android:alpha="0.3"
                app:tint="#9CA3AF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No items found"
                android:textSize="18sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items matching this filter will appear here"
                android:textSize="14sp"
                android:textColor="#9CA3AF"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>