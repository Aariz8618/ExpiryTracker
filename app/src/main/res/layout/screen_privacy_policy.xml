<?xml version="1.0" encoding="utf-8"?>
<!-- screen_privacy_policy.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- Top bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/left_arrow"
                app:iconTint="@color/green_primary"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white">

            <!-- Last Updated Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated: October 2025"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textStyle="italic"
                android:layout_marginBottom="20dp" />

            <!-- Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Grocery Tracker App respects the privacy of its users and is committed to protecting the information shared while using the application. The app may collect certain personal details such as a user's name, email address, or phone number when an account is created. It may also gather information about how the app is used, including grocery items saved, lists created, and features accessed, along with basic device details such as device type, operating system, and app version."
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Information Use Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information Use"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The information collected is used only to provide and improve the features of the app, to save user preferences and grocery lists, to send necessary notifications or updates, and to analyze usage patterns in order to enhance the overall user experience. The Grocery Tracker App does not sell, trade, or rent any personal information to third parties. Data is shared only when required by law or when it is necessary to protect the rights, safety, or security of users and the application itself."
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Data Security Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Security"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The app takes reasonable steps to secure user data against unauthorized access, misuse, or disclosure, though users are reminded that no system of internet transmission or electronic storage can be guaranteed as completely secure. Users retain the right to update or delete their personal information through account settings and may choose to disable non-essential notifications at any time."
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Children's Privacy Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children's Privacy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Grocery Tracker App is not designed for children under the age of 13, and no personal information from children is knowingly collected. Any changes to this Privacy Policy will be updated promptly, with the new effective date displayed at the top of the document."
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Contact Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For questions, feedback, or concerns about this Privacy Policy, users may contact the development team at:"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Contact Email Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contact_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/green_primary"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="freshtrack@gmail.com"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right_arrow"
                        app:tint="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Padding -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>