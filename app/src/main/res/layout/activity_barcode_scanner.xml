<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".BarcodeScannerActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scaleType="fillCenter" />

    <!-- Camera Preview
    <View
        android:id="@+id/preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" /> -->

    <!-- Overlay for scanning frame -->
    <View
        android:id="@+id/scan_overlay"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/scan_frame_overlay"
        app:layout_constraintBottom_toBottomOf="@id/preview_view"
        app:layout_constraintEnd_toEndOf="@id/preview_view"
        app:layout_constraintStart_toStartOf="@id/preview_view"
        app:layout_constraintTop_toTopOf="@id/preview_view" />

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Back"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/white"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manual_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Manually"
            style="@style/Widget.Material3.Button"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

    <!-- Enhanced Top bar with GS1 support indicator -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:background="@drawable/rounded_background_semi_transparent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode Scanner"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Standard Barcodes + GS1 QR/DataMatrix"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Scanning animation line (optional visual enhancement) -->
    <View
        android:id="@+id/scan_line"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:background="@color/primary"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="@id/scan_overlay"
        app:layout_constraintEnd_toEndOf="@id/scan_overlay"
        app:layout_constraintTop_toTopOf="@id/scan_overlay"
        app:layout_constraintBottom_toBottomOf="@id/scan_overlay" />

    <!-- Corner indicators for better scanning guidance -->
    <ImageView
        android:id="@+id/corner_top_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_corner_top_left"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@id/scan_overlay"
        app:layout_constraintTop_toTopOf="@id/scan_overlay"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp" />

    <ImageView
        android:id="@+id/corner_top_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_corner_top_right"
        android:alpha="0.8"
        app:layout_constraintEnd_toEndOf="@id/scan_overlay"
        app:layout_constraintTop_toTopOf="@id/scan_overlay"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="-10dp" />

    <ImageView
        android:id="@+id/corner_bottom_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_corner_bottom_left"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@id/scan_overlay"
        app:layout_constraintBottom_toBottomOf="@id/scan_overlay"
        android:layout_marginStart="-10dp"
        android:layout_marginBottom="-10dp" />

    <ImageView
        android:id="@+id/corner_bottom_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_corner_bottom_right"
        android:alpha="0.8"
        app:layout_constraintEnd_toEndOf="@id/scan_overlay"
        app:layout_constraintBottom_toBottomOf="@id/scan_overlay"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>