<?xml version="1.0" encoding="utf-8"?>
<!-- screen_recipes.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_50">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/left_arrow"
                app:iconTint="@color/green_primary"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes for You"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/icon_filter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_filter"
                android:layout_marginRight="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Based on expiring items card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_expiring_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/orange_400">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/white"
                            android:layout_marginRight="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Based on expiring items"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Ingredient tags -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Milk"
                            android:background="@drawable/tag_rounded_white"
                            android:textColor="@color/orange_400"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginRight="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bread"
                            android:background="@drawable/tag_rounded_white"
                            android:textColor="@color/orange_400"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginRight="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomatoes"
                            android:background="@drawable/tag_rounded_white"
                            android:textColor="@color/orange_400"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginRight="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrots"
                            android:background="@drawable/tag_rounded_white"
                            android:textColor="@color/orange_400"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salmon"
                            android:background="@drawable/tag_rounded_white"
                            android:textColor="@color/orange_400"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Suggested Recipes Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_recipe"
                    app:tint="@color/green_primary"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggested Recipes"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Recipe Card 1 - Creamy Salmon Pasta -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_recipe_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image_recipe_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@color/red_chip_bg"
                        android:scaleType="centerCrop"
                        app:cornerRadius="12dp"
                        android:layout_marginRight="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Creamy Salmon Pasta"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medium"
                                android:background="@drawable/difficulty_medium_bg"
                                android:textColor="@color/orange_600"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delicious pasta with fresh salmon and cream sauce using your..."
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/gray_500"
                                android:layout_marginRight="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 min"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp"
                                android:layout_marginRight="16dp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_user"
                                app:tint="@color/gray_500"
                                android:layout_marginRight="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 servings"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salmon"
                                android:textColor="@color/gray_700"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginRight="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pasta"
                                android:textColor="@color/gray_700"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginRight="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cream"
                                android:textColor="@color/gray_700"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 more"
                            android:textColor="@color/gray_500"
                            android:textSize="12sp"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_view_recipe_1"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="View Recipe"
                            android:textSize="12sp"
                            android:textColor="@color/green_primary"
                            app:strokeColor="@color/green_primary"
                            app:strokeWidth="1dp"
                            app:cornerRadius="16dp"
                            android:layout_gravity="start"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recipe Card 2 - Garden Fresh Salad -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_recipe_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image_recipe_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@color/red_chip_bg"
                        android:scaleType="centerCrop"
                        app:cornerRadius="12dp"
                        android:layout_marginRight="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Garden Fresh Salad"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Easy"
                                android:background="@drawable/difficulty_easy_bg"
                                android:textColor="@color/green_600"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fresh and healthy salad with tomatoes and carrots from you..."
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/gray_500"
                                android:layout_marginRight="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 min"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp"
                                android:layout_marginRight="16dp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_user"
                                app:tint="@color/gray_500"
                                android:layout_marginRight="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 servings"
                                android:textColor="@color/gray_500"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tomatoes"
                                android:textColor="@color/gray_700"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginRight="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carrots"
                                android:textColor="@color/gray_700"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginRight="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lettuce"
                                android:textColor="@color/gray_700"
                                android:textSize="10sp"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 more"
                            android:textColor="@color/gray_500"
                            android:textSize="12sp"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_view_recipe_2"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="View Recipe"
                            android:textSize="12sp"
                            android:textColor="@color/green_primary"
                            app:strokeColor="@color/green_primary"
                            app:strokeWidth="1dp"
                            app:cornerRadius="16dp"
                            android:layout_gravity="start"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>